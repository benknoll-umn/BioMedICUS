<typeSystemDescription xmlns="http://uima.apache.org/resourceSpecifier">
    <name>Acronym</name>
    <description/>
    <version>1.0</version>
    <vendor/>
    <types>
        <typeDescription>
            <name>edu.umn.biomedicus.type.Acronym</name>
            <description>Marks a recognized edu.umn.biomedicus.acronym. Currently this implements recognition, candidate
                expansions, recommended expansion, and source (e.g., TAX, Tax-responsive element, Metamap).
            </description>
            <supertypeName>uima.tcas.Annotation</supertypeName>

            <features>
                <featureDescription>
                    <name>expansion</name>
                    <description>The fully writen term for the edu.umn.biomedicus.acronym. For example, the "expansion"
                        for the
                        edu.umn.biomedicus.acronym "TAX1" is "Tax-responsive element 1".
                    </description>
                    <rangeTypeName>uima.cas.String</rangeTypeName>
                </featureDescription>
            </features>
        </typeDescription>
    </types>
</typeSystemDescription>
